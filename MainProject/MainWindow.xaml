<ribbon:RibbonWindow x:Class="RE.MainProject.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:view="clr-namespace:RE.MainProject.View"
        xmlns:ribbon="http://schemas.actiprosoftware.com/winfx/xaml/ribbon"
        xmlns:local="clr-namespace:RE.MainProject"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="600" ApplicationName="MainProject">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>
        <view:RibbonView/>
        <view:DockSiteView Grid.Row="1"/>
        <view:StatusBarView Grid.Row="2"/>
    </Grid>
</ribbon:RibbonWindow>
